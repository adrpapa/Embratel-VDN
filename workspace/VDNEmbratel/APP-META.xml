	<vendor>
		<name>Vendor Embratel</name>
		<homepage>https://embratel.com.br</homepage>
	</vendor>
	<packager>
		<name>Fastlane</name>
		<homepage>https://flts.com.br</homepage>
	</packager>
	<presentation>
		<summary>Descrição sumária VDN</summary>
