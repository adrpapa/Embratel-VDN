		</text>
	</license-agreement>
	<service id="clouds">

		
		<code engine="php" path="scripts/clouds.php" />
		<presentation>
			<name>VDN  Embratel globals</name>
			<summary>VDN  Embratel  global configuration variables</summary>
		</presentation>
	</service>

	<service id="contexts">
		
		<code engine="php" path="scripts/contexts.php" />
		<presentation>
			<name>VDN  Embratel Management</name>
			<summary>VDN Embratel environment</summary>
		</presentation>
	</service>

	<service id="channels">
		
		<code engine="php" path="scripts/channels.php" />
		<presentation>
			<name>VDN Live Channels</name>
			<summary>VDN Live Channels</summary>
		</presentation>
	</service>

	<service id="vpses">
		
		<code engine="php" path="scripts/vpses.php" />
		<presentation>
			<name>VDN Virtual Private Server</name>
			<summary>Cloud virtual private server</summary>
		</presentation>
	</service>
	
	<service id="jobs">
		
		<code engine="php" path="scripts/jobs.php" />
		<presentation>
			<name>VDN Job Content</name>
			<summary>VDN Job Content</summary>
		</presentation>
	</service>	
</application>
